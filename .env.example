# Environment Configuration for eDiscovery LLM Retrieval System

# API Configuration
PROJECT_NAME="eDiscovery LLM Retrieval System"
PROJECT_DESCRIPTION="Production-ready document processing system"
VERSION="1.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8001

# OpenSearch Configuration
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# BERT NER Configuration
BERT_MODEL_NAME=dbmdz/bert-large-cased-finetuned-conll03-english
BERT_DEVICE=auto

# Redis/Celery Configuration (for future use)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Data Directories
DATA_DIR=data
MODELS_DIR=models
CACHE_DIR=cache
