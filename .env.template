# LLM Retrieval System Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# OpenAI Configuration (Required for most features)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# OpenSearch Configuration (Optional - for document indexing)
# =============================================================================
OPENSEARCH_ENDPOINT=http://localhost:9200
# Set to true if you don't have OpenSearch running
SKIP_OPENSEARCH=false

# =============================================================================
# Ollama Configuration (Optional - for local LLM)
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
# Set to true if you don't have Ollama running
SKIP_OLLAMA=false

# =============================================================================
# Application Configuration
# =============================================================================
# Enable debug mode for development (shows detailed request/response logs)
DEBUG_MODE=false

# Model configuration
MODEL_TYPE=ollama
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Azure VM Specific Settings
# =============================================================================
# Set these for Azure VM deployment
AZURE_VM_HOST=your-vm-ip-address
AZURE_VM_USERNAME=your-vm-username

# =============================================================================
# Docker/Container Settings (if using Docker)
# =============================================================================
DOCKER_MODE=false
DOCKER_ENV=false

# =============================================================================
# Performance Settings
# =============================================================================
# For BERT NER processing
USE_GPU=false
MAX_WORKERS=4

# =============================================================================
# Security Settings
# =============================================================================
# Add any API keys or tokens here
# CUSTOM_API_TOKEN=your-custom-token

# =============================================================================
# Development/Testing Flags
# =============================================================================
# Skip certain components during development
SKIP_BERT_LOADING=false
SKIP_MODEL_DOWNLOADS=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/application.log
